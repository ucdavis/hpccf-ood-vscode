---
batch_connect:
  template: "basic"
script:
  native:
    - "--cpus-per-task"
    - "<%= cores %>"
    - "--mem"
    - "<%= mem %>G"
    <%- if gpu_num.to_i > 0 -%>
    - "--gpus"
    - "<%= gpu_num.to_s %>"
    <%- end -%>
  job_environment:
    PATH: /bin:/sbin:/usr/bin:/usr/sbin:/snap/bin:/opt/puppetlabs/bin
    HOME: <%= Pathname.new(ENV['HOME']).to_s %>
    USER: <%= ENV['USER'].to_s %>
